type Comment extends Timestamped {
    id: String
    parent: String
    commenter: String
    comment: String

    validate() {
        this.id == c_id
    }
}

path /comments {
    read() { true }
}

path /comments/{c_id} is Comment {
    write() { isOwner(this.commenter) }
    index() {[ ".key", "parent", "commenter", "updated_at" ]}
}